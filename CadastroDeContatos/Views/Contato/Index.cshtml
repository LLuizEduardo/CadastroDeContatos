@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de contatos";
}




<div class="text-center">

    <br />

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
    </div>

    <br />

    <h1 class="display-4">Listagem de contatos</h1>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Telefone</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @*<tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto@gmail</td>
                    <td>9869869869</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger">Excluir</a>
                        </div>
                    </td>
                </tr>*@


            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel Contato in Model)
                {
                    <tr>
                        <th scope="row">@Contato.Id</th>
                        <td>@Contato.Nome</td>
                        <td>@Contato.Email</td>
                        <td>@Contato.Telefone</td>
                        <td>
                            <div>
                                <a role="button" class="btn btn-primary" asp-route-id="@Contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@Contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>
